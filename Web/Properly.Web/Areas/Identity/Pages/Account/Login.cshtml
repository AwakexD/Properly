@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-4">
        <section>
            <div class="container mx-auto my-auto">
                <div class="flat-account bg-surface">
                    <h3 class="title text-center">Log In</h3>
                    <form id="account" method="post">
                        <fieldset class="box-fieldset">
                            <label asp-for="Input.Email">Your Email<span>*</span>:</label>
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" class="form-contact style-1">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="box-fieldset">
                            <label asp-for="Input.Password">Password<span>*</span>:</label>
                            <div class="box-password">
                                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="form-contact style-1 password-field" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <span class="show-pass">
                                    <i class="icon-pass icon-eye"></i>
                                    <i class="icon-pass icon-eye-off"></i>
                                </span>
                            </div>
                        </fieldset>
                        <div class="d-flex justify-content-between flex-wrap gap-12">
                            <fieldset class="d-flex align-items-center gap-6">
                                <input asp-for="Input.RememberMe" type="checkbox" class="tf-checkbox style-2" id="cb1">
                                <label asp-for="Input.RememberMe" class="caption-1 text-variant-1">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </fieldset>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="caption-1 text-primary">Forgot your password?</a>
                        </div>
                        <button id="login-submit" type="submit" class="tf-btn primary w-100">Login</button>
                        <div class="mt-12 text-variant-1 text-center noti">Not registered yet?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-black fw-5">Sign Up</a></div>
                    </form>
                </div>
            </div>
        </section>
    </div>
