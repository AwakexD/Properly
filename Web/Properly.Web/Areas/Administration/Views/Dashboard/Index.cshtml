@model Properly.Web.ViewModels.Administration.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin Dashboard";
}

<section class="flat-section flat-service-v3">
    <div class="container">
        <div class="box-title text-center">
            <div class="text-subtitle text-primary" style="font-size: 3.8em;">@this.ViewData["Title"]</div>
            <h4 class="mt-4">Manage the Application</h4>
        </div>
        <div class="row">
            <!-- All Users -->
            <div class="box col-lg-6 col-md-6">
                <div class="box-service style-2" style="background-color:#b0e5ff;">
                    <div class="icon-box">
                        <i class="fa-regular fa-user" style="font-size: 3em;"></i>
                    </div>
                    <div class="content">
                        <h5 class="title">All Users</h5>
                        <p class="description">Manage all users and view their statuses.</p>
                        <a asp-controller="User" asp-action="All" class="tf-btn size-1">Manage Users</a>
                    </div>
                </div>
            </div>

            <div class="box col-lg-6 col-md-6">
                <div class="box-service style-2" style="background-color:#b0e5ff;">
                    <div class="icon-box">
                        <i class="fa-solid fa-table" style="font-size: 3em;"></i>
                    </div>
                    <div class="content">
                        <h5 class="title">Property Types</h5>
                        <p class="description">Add, edit, or delete property types available for listings.</p>
                        <a asp-controller="PropertyTypes" asp-action="All" class="tf-btn size-1">Manage Property Types</a>
                    </div>
                </div>
            </div>

            <div class="box col-lg-6 col-md-6">
                <div class="mt-3 box-service style-2" style="background-color:#b0e5ff;">
                    <div class="icon-box">
                        <i class="fa-solid fa-table" style="font-size: 3em;"></i>
                    </div>
                    <div class="content">
                        <h5 class="title">Features</h5>
                        <p class="description">Add, edit, or delete features available for listings.</p>
                        <a asp-controller="Features" asp-action="All" class="tf-btn size-1">Manage Features</a>
                    </div>
                </div>
            </div>

            <div class="box col-lg-6 col-md-6">
                <div class="mt-3 box-service style-2" style="background-color:#b0e5ff;">
                    <div class="icon-box">
                        <span class="icon icon-sale-home" style="font-size:3em;"></span>
                    </div>
                    <div class="content">
                        <h5 class="title">Listings</h5>
                        <p class="description">View or manage property listings that are available.</p>
                        <a asp-controller="Listings" asp-action="All" class="tf-btn size-1">Manage Listings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
