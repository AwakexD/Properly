@using static Properly.Web.Infrastructure.Middlewares.OnlineUsersMiddleware
@model IEnumerable<Properly.Web.ViewModels.Administration.User.UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-5">
    <h2>All Users</h2>
    <table id="usersTable" class="display">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Email Confirmed</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(user.FirstName + " " + user.LastName)</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    @if (user.EmailConfirmed)
                    {
                        <td>
                            <span class="badge badge-success">Yes</span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="badge badge-danger">No</span>
                        </td>
                    }
                    @* ToDo : Test if the middleware is working? *@
                    @if (CheckIfUserIsOnline(user.Id))
                    {
                        <td>
                            <span class="badge badge-success">Online</span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <span class="badge badge-danger">Offline</span>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
