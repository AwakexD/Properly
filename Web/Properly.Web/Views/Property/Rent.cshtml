@model Properly.Web.ViewModels.Rent.RentViewModel

@{
    this.ViewData["Title"] = "Rent a property : " + Model.PageNumber;
}

<h1>@this.ViewData["Title"]</h1>
<hr />

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var listing in Model.Listings)
    {
        <div class="col">
            <div class="card">
                <img src="@listing.Photos.FirstOrDefault()" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title"><strong>@listing.Price.ToString("C0")/mo</strong></h5>
                    <p class="card-text">@listing.FullAddress</p>
                </div>
            </div>
        </div>
    }
</div>
<hr/>
<partial name="_PagingPartial" model="@Model"/>