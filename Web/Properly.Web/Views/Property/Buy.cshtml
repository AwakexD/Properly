@model Properly.Web.ViewModels.Buy.BuyViewModel

@{
    this.ViewData["Title"] = "Buy a property : " + Model.PageNumber; 
}

@section Styles {
    <link rel="stylesheet" href="~/css/Property/buy.css"/>
    <link rel="stylesheet" href="~/css/Home/index.css"/>
}

<h1>@this.ViewData["Title"]</h1>

<section class="listings-section">
    <div class="container">
        @foreach (var listing in Model.Listings)
        {
            <div class="listing">
                <div class="listing-image">
                    <img src="@listing.PhotoUrl" alt="">
                </div>
                <div class="listing-body">
                    <div class="body-main">
                        <h1 class="price-heading">@listing.Price.ToString("C0")</h1>
                        <i class="fa-regular fa-bookmark"></i>
                    </div>

                    <div class="listing-info">
                        <p class="prop-details">@listing.Details</p>
                        <p class="address">@listing.FullAddress</p>
                    </div>

                    <p class="description">@listing.Description.Substring(0, 50)</p>
                </div>
            </div>
        }
    </div>
</section>

<partial name="_PagingPartial" model="@Model"/>