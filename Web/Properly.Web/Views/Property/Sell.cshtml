@model Properly.Web.ViewModels.Sell.CreateListingViewModel;

@{
    this.ViewData["Title"] = "Sell a property";
}

@if (this.User.Identity.IsAuthenticated)
{
    <h1>@this.ViewData["Title"]</h1>

    <form asp-controller="Property" asp-action="Sell" method="post" class="container mt-5">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Property.Size">Size:</label>
            <input asp-for="Property.Size" type="number" class="form-control">
            <span asp-validation-for="Property.Size" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Property.Bathrooms">Bathrooms:</label>
            <input asp-for="Property.Bathrooms" type="number" class="form-control">
            <span asp-validation-for="Property.Bathrooms" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Property.Bedrooms">Bedrooms:</label>
            <input asp-for="Property.Bedrooms" type="number" class="form-control">
            <span asp-validation-for="Property.Bedrooms" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Listing.Price">Price:</label>
            <input asp-for="Listing.Price" type="number" class="form-control">
            <span asp-validation-for="Listing.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Property.Description">Description:</label>
            <textarea asp-for="Property.Description" class="form-control" id="Description" rows="4"></textarea>
            <span asp-validation-for="Property.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Property.ConstructionDate">Construction Date:</label>
            <input asp-for="Property.ConstructionDate" type="date" class="form-control">
            <span asp-validation-for="Property.ConstructionDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.StreetName">Street Name:</label>
            <input asp-for="Address.StreetName" type="text" class="form-control">
            <span asp-validation-for="Address.StreetName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City:</label>
            <input asp-for="Address.City" type="text" class="form-control">
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.ZipCode">Zip Code:</label>
            <input asp-for="Address.ZipCode" type="text" class="form-control">
            <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Country">Country:</label>
            <input asp-for="Address.Country" type="text" class="form-control">
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Property.PropertyTypeId">Property Type: </label>
            <select class="form-control" id="PropertyTypeId" asp-for="Property.PropertyTypeId">
                <option value="">Select Property Type</option>
                @foreach (var type in Model.ListingOptions.PropertyTypes)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
            <span asp-validation-for="Property.PropertyTypeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Listing.ListingTypeId">Listing Type: </label>
            <select class="form-control" id="ListingTypeId" asp-for="Listing.ListingTypeId">
                <option value="">Select Listing Type</option>
                @foreach (var type in Model.ListingOptions.ListingTypes)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
            <span asp-validation-for="Listing.ListingTypeId" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <label>Select property features: </label>
            @foreach (var feature in Model.ListingOptions.Features)
            {
                <div class="col-md-3">
                    <div class="form-check">
                        <input name="Property.SelectedFeatures" class="form-check-input" type="checkbox" id="feature-@feature.Id" value="@feature.Id">
                        <label class="form-check-label" for="feature-@feature.Id">
                            @feature.Name
                        </label>
                    </div>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

}
else
{
    <h1>You must be logged in</h1>
}

